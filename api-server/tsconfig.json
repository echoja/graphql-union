{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["ES2020"],
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
